{% if is_granted('DELETE', alerte) %}
<form method="post" action="{{ path('app_alerte_delete', {'id': alerte.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ alerte.id) }}">
    <button class="btn btn-sm btn-danger btn-delete">supprimer</button>
</form>
{% endif %}