{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="card">
            <h3 class="card-header">
               {{ status_code }} - Page non trouvée
            </h3>
            <div class="card-body">
                <p>La page que vous avez demandée n'existe pas ou n'existe plus.</p>
                <code>{{ exception.message }}</code>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_homepage') }}" class="btn btn-primary">retour à la page d'accueil</a>
            </div>
        </div>
    </div>
{% endblock %}