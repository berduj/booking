{% extends 'base.html.twig' %}

{% block title %}Filières{% endblock %}

{% block body %}
    <h1>Filières</h1>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>Libellé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="sortable-entity" data-url="{{ path('sortable_entity') }}" data-entity="App\Entity\Filiere">
        {% for filiere in filieres %}
            <tr data-id="{{ filiere.id }}">
                <td class="handle"></td>
                <td class="{{ filiere.enabled?"on":"off" }}"></td>
                <td>{{ filiere.libelle }}</td>
                <td>
                    <a href="{{ path('app_filiere_show', {'id': filiere.id}) }}" class="btn btn-primary btn-sm btn-show">voir</a>
                    <a href="{{ path('app_filiere_edit', {'id': filiere.id}) }}" class="btn btn-primary btn-sm btn-edit">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_filiere_new') }}" class="btn btn-primary btn-sm btn-add">ajouter</a>
{% endblock %}
