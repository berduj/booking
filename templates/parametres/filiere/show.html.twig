{% extends 'base.html.twig' %}

{% block title %}Filière{% endblock %}

{% block body %}
    <h1>Filière <span>{{ filiere }}</span></h1>

    <div class="tab-content mt-3" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-filiere" role="tabpanel" aria-labelledby="nav-filiere-tab" tabindex="0">
            <table class="table">
                <tbody>
                <tr>
                    <th>Libellé</th>
                    <td>{{ filiere.libelle }}</td>
                </tr>
                <tr>
                    <th>Activé</th>
                    <td>{{ filiere.enabled ?"Oui":"Non" }}</td>
                </tr>
                <tr>
                    <th>Création</th>
                    <td>{{ filiere.createdByAt }}</td>
                </tr>
                <tr>
                    <th>Dernière modification</th>
                    <td>{{ filiere.updatedByAt }}</td>
                </tr>
                <tr>
                    <th>Id</th>
                    <td>{{ filiere.id }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('app_filiere_edit', {'id': filiere.id}) }}" class="btn btn-sm btn-primary btn-edit">modifier</a>
            <a href="{{ path('app_filiere_index') }}" class="btn btn-sm btn-primary btn-back">retour</a>
            {{ include('parametres/filiere/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
