{% extends 'base.html.twig' %}

{% block title %}Modalité de contact{% endblock %}

{% block body %}
    <h1>Modalité de contact <span>{{ modaliteContact }}</span></h1>

    <div class="tab-content mt-3" id="nav-tabContent">

        <table class="table">
            <tbody>
            <tr>
                <th>Libellé</th>
                <td>{{ modaliteContact.libelle }}</td>
            </tr>
            <tr>
                <th>Activé</th>
                <td>{{ modaliteContact.enabled ?"Oui":"Non" }}</td>
            </tr>
            <tr>
                <th>Création</th>
                <td>{{ modaliteContact.createdByAt }}</td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>{{ modaliteContact.updatedByAt }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ modaliteContact.id }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_modaliteContact_edit', {'id': modaliteContact.id}) }}" class="btn btn-sm btn-primary  btn-edit">modifier</a>
        <a href="{{ path('app_modaliteContact_index') }}" class="btn btn-sm btn-primary btn-back">retour</a>
        {{ include('parametres/modaliteContact/_delete_form.html.twig') }}

    </div>
{% endblock %}
