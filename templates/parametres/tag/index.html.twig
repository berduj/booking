{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
    <h1>Tags</h1>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            {% for type in types %}
                <button class="nav-link {{ type == tab ? "active" }}" id="nav-{{ type }}-tab" data-bs-toggle="tab" data-bs-target="#nav-{{ type }}" type="button" role="tab"
                        aria-controls="nav-{{ type }}"
                        aria-selected="true">
                    {{ type }}
                </button>
            {% endfor %}
        </div>
    </nav>

    <div class="tab-content mt-3" id="nav-tabContent">
        {% for type in types %}
            <div class="tab-pane fade show {{ type == tab ? "active" }}" id="nav-{{ type }}" role="tabpanel" aria-labelledby="nav-{{ type }}-tab" tabindex="0">
                <table class="table">
                    <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>Libell√©</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody class="sortable-entity" data-url="{{ path('sortable_entity') }}" data-entity="App\Entity\Tag">
                    {% for tag in tags[type] %}
                        <tr data-id="{{ tag.id }}">
                            <td class="handle"></td>
                            <td class="{{ tag.enabled?"on":"off" }}"></td>
                            <td>{{ tag.libelle }}</td>
                            <td>
                                <a href="{{ path('app_tag_show', {'id': tag.id}) }}" class="btn btn-primary btn-sm btn-show">voir</a>
                                <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-primary btn-sm btn-edit">modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('app_tag_new', {type:type}) }}" class="btn btn-primary btn-sm btn-add">ajouter</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
